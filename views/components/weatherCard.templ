package components

templ WeatherCard(date string, avgTemp string, maxTemp string, minTemp string, precipitation string, windSpeed string ) {

    <div class="bg-white w-64 p-4 rounded-xl shadow-md text-center space-y-4 m-2">
        <!-- Location and Date -->
        <div>
            <h1 class="text-xl font-semibold text-left">London</h1>
            <p class="text-gray-400 text-sm text-left">{ date }</p>
        </div>
        
        <!-- Weather Icon and Temperature -->
        <div class="flex flex-col items-center">
            <div class="text-5xl text-green-500">☁️</div>
            <div class="text-4xl font-bold mt-2">{avgTemp}°C</div>
            // <p class="text-sm font-medium text-gray-500">Sunny</p>
            <p class="text-xs text-gray-400 mt-1">{minTemp}°C / {maxTemp}°C</p>
        </div>
        
        <!-- Additional Details (Wind, Direction, Humidity) -->
        <div class="flex justify-between text-gray-600">
            <div class="text-center">
            <div class="text-green-500 text-lg">💨</div>
            <p class="text-xs mt-1">{ windSpeed } KM/H</p>
            </div>
            <div class="text-center">
            <div class="text-green-500 text-lg">💧</div>
            <p class="text-xs mt-1">{ precipitation }%</p>
            </div>
        </div>
        </div>
}